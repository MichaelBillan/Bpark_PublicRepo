<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="500"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bparkClient.gui.SubscriberDetailsController"
            stylesheets="@/bparkClient/style/verifyViaTag.css">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label text="Subscriber Details" styleClass="text-title"/>

                <GridPane hgap="15" vgap="20">
                    <Label text="Subscriber Code:" styleClass="label-subtitle" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="codeField" styleClass="text-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Name:" styleClass="label-subtitle" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" styleClass="text-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Phone Number:" styleClass="label-subtitle" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" styleClass="text-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Email:" styleClass="label-subtitle" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" styleClass="text-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </children>

            <padding>
                <Insets top="20" left="40" right="40" bottom="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
